

<div class="row">
    <div class="col-md-4 col-md-offset-4 mb-4  ">

        <!--Card-->
        <div class="card">

            <!--Card content-->
            <div class="card-body">
                <form method="post" action="@Url.Action("Autenticar","Home")">

                    <p class="h5 text-center mb-4">Iniciar Sesión</p>

                    <div class="md-form">
                        <i class="fa fa-user prefix grey-text"></i>
                        <input type="text" name="user" id="user" class="form-control">
                        <label for="user">Usuario</label>
                    </div>
                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>
                        <input type="password" name="pass" id="pass" class="form-control">
                        <label for="pass">Password</label>
                    </div>

                    <div class="text-center mt-4">
                        <button class="btn btn-deep-orange waves-effect waves-light">Iniciar</button>
                    </div>
                    <span class="badge badge-danger">@ViewBag.mensaje</span>
                </form>

            </div>

        </div>

    </div>

</div>

